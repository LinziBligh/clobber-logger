<h2>Choose a category</h2>

<div class="cards">
<%@categories.each do |category|%>
<div class="card">
<a href="/category/<%=category.id%>">
<%if category.name=="Footwear"%>
<img src="images/shoes.png" style="width:100%">
<% elsif category.name=="Tops"%>
<img src="images/t-shirts.jpg" style="width:100%">
<% elsif category.name=="Bottoms"%>
<img src="images/bottoms.jpg" style="width:100%">
<% elsif category.name=="Accessories"%>
<img src="images/accessories.jpg" style="width:100%">
<% elsif category.name=="Jumpers/Cardigans"%>
<img src="images/sweaters.jpg" style="width:100%">
<% elsif category.name=="Coats/Jackets"%>
<img src="images/outerwear.png" style="width:100%">
<%end%>
</a>
<div class="container"> 
    <a href="/category/<%=category.id%>"><%=category.name%></a>
        </div>
</div>
<%end%>
</div>


